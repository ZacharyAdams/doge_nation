<div class="container">
  <div class="row">
      <div class="col-lg-12">
        <%= form_tag(posts_path, method: "get", id: "search-form") do %>
          <%= text_field_tag :search, params[:search], placeholder: "Search For Posts" %>
          <%= submit_tag "Much Search", class: "btn btn-danger btn-lg btn3d" %>
        <% end %>
      </div>
  </div>
</div>
<table class="table table-hover">
  <thead>
    <tr class="table_header">
      <th>Recent Shibes Barking</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |p| %>
      <tr>
        <td style="width:100%"><%= link_to p.title, post_path(p) %> <%= p.created_at.strftime("%b %d, %Y")%> <%= p.user.email %></td>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<%= paginate @posts %>
